<div class="container">
  <h1>カレンダー</h1>

  <%= month_calendar events: @diaries do |date, diaries| %>
    <%= link_to date.day, diary_path(date.to_s) %>
    <% diaries.each do |diary| %>
      <div>
        <% if diary.good? %>
          <i class="far fa-laugh-beam good-icon"></i>
        <% else %>
          <i class="far fa-grimace bad-icon"></i>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="text-center mt-4">
    <% if current_user.diaries.find_by(start_time: Time.current.beginning_of_day) %>
      <%= link_to new_diary_path, class: 'btn btn-primary disabled' do %>
        今日は入力済みです<i class="fas fa-pencil-alt"></i>
      <% end %>
    <% else %>
      <%= link_to new_diary_path, class: 'btn btn-primary' do %>
        今日の日記を入力する<i class="fas fa-pencil-alt"></i>
      <% end %>
    <% end %>
  </div>
</div>